{
  "name": "Karma's A Button",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Allows you to upvote or downvote every comment or post on the current page of Reddit, as well as Imgur.",
  "author": "Charlton Trezevant",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
    "browser_action": {
          "default_icon": {
            "19": "icon19.png"
          },
          "default_title": "Karma's A Button",
          "default_popup": "popup.html"
    },
  "permissions": ["tabs", "*://*.reddit.com/*", "*://*.imgur.com/*"]
}
